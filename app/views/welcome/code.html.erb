<h1>Welcome!</h1>

<% if current_user %>
  <p>Hello, <%= @twitter_data.client.name %></p>
  <%= image_tag @twitter_data.user.profile_image_url %>
  <%= @twitter_data.user.followers_count %>
  <%= @twitter_data.user.friends_count %>
  <%= @twitter_data.user.description %>

  <p>
  <%= form_for :tweet, url: tweets_path, method: :post do |f| %>
    <%= f.text_field :message %>
    <%= f.submit "Tweet!" %>
  <% end %>
</p>

 <% @twitter_data.user_timeline.each do |tweet| %>
   <%= tweet.text %>
  <% end %>
<%= link_to "Logout", logout_path %>
<% else %>
  <%= link_to "Login", login_path %>
<% end %>
